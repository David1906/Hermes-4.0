<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:panels="clr-namespace:UI.Features.Panels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UI.Features.Panels.PanelProcessorView"
             x:DataType="panels:PanelProcessorViewModel">
    <StackPanel>
        <TextBlock Text="{Binding MachineState.Value, StringFormat=State: {0} }" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin=" 10"
                    Classes="Success"
                    Command="{Binding StartCommand}"
                    Content="Start"
                    IsVisible="{Binding !IsConnected.Value}" />

            <Button Margin=" 10"
                    Classes="Danger"
                    Command="{Binding StopCommand}"
                    Content="Stop"
                    IsVisible="{Binding IsConnected.Value}" />
        </StackPanel>
    </StackPanel>
</UserControl>